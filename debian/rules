#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_install:
	dh_auto_install
# Kopiere main.py (als serv-guy) in den /bin/-Ordner
	mkdir -p $(CURDIR)/debian/autogit/bin
	cp $(CURDIR)/autogit.sh $(CURDIR)/debian/autogit/bin/autogit
# Kopiere den gesamten Inhalt des src-Verzeichnisses in das Installationsverzeichnis
	mkdir -p $(CURDIR)/debian/autogit/usr/share/autogit/src
	cp -R $(CURDIR)/src/. $(CURDIR)/debian/autogit/usr/share/autogit/src
